{
  "manifest_version": 2,

  "icons": { "48": "images/icon.png"}, 
  //Taken from: Material Design icons by Google http://google.github.io/material-design-icons/

  "name": "Memory Monitor",
  "version": "1.0",
  "description": "Displays current tab memory usage",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "",
    "default_icon": {
      "48": "images/icon.png"
    }
  },

  "permissions": [
    "processes",
    "tabs"
  ]
  
}